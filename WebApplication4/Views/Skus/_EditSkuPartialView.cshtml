@model Sku

<div class="modal fade" id="editSku-@Model.Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit Customer</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Edit", "Skus", FormMethod.Post, new { @id = "editSku", @name = "editSku", onsubmit = "return editSkuValidateForm()" }))

                {
                    @Html.HiddenFor(m => m.Id)
                    <div class="label" style="text-align: left;">@Html.Label("Name")</div>
                    <div class="field">@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })</div>
                    @*<div class="error">@Html.ValidationMessageFor(model => model.Name)</div>*@

                    <div class="label" style="text-align: left;">@Html.Label("Code")</div>
                    <div class="field">@Html.TextBoxFor(m => m.Code, new { @class = "form-control" })</div>
                    @*<div class="error">@Html.ValidationMessageFor(model => model.Code)</div>*@

                    <div class="label" style="text-align: left;">@Html.Label("UnitPrice")</div>
                    <div class="field">@Html.TextBoxFor(m => m.UnitPrice, new { @class = "form-control" })</div>
                    <div class="error">@Html.ValidationMessageFor(model => model.UnitPrice)</div>

                    <div class="label" style="text-align: left;">@Html.Label("Is Active")</div>
                    <div class="field" style="text-align: left;">@Html.CheckBoxFor(m => m.IsActive)</div>
                    <div class="error">@Html.ValidationMessageFor(model => model.IsActive)</div>

                    @Html.ValidationSummary()

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        @*<input class="field" id="submit" type="submit" value="Edit" />*@
                        <button type="submit" id="editSkuBtn" class="btn btn-primary">Edit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>